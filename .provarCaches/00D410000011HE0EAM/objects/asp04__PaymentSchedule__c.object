    <validationRules>
        <fullName>asp04__In_force_status_test</fullName>
        <active>true</active>
        <errorConditionFormula>AND (ISPICKVAL(asp04__Status__c, &apos;Active&apos;), ISBLANK( asp04__Authorisation__c ))</errorConditionFormula>
        <errorMessage>You must have an Authorisation in place before you can set the Subscription Status to &apos;Active&apos;.</errorMessage>
    </validationRules>
    <validationRules>
        <fullName>asp04__PreventFromZeroOrNegativeAmountEntry</fullName>
        <active>true</active>
        <description>Any negative or Zero value entered in regular amount on Payment schedule records are not accepted.</description>
        <errorConditionFormula>asp04__Regular_Amount__c &lt;= 0</errorConditionFormula>
        <errorDisplayField>asp04__Regular_Amount__c</errorDisplayField>
        <errorMessage>Amount must be greater than zero.</errorMessage>
    </validationRules>
