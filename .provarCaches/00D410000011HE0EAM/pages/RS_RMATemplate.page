<apex:page id="pg" standardController="rstk__sormh__c" extensions="rstk.ControllerExtnSormhPrint" sideBar="true" action="{!doBeforePageLoad}" renderAs="pdf">
<apex:variable var="h_f" value="{!$ObjectType.rstk__fsoackh__c.fields}" />
<apex:variable var="l_f" value="{!$ObjectType.rstk__fsoackd__c.fields}" />
<head>
<style>
    @page {
        size:portrait;
        margin-top: 30px;
        margin-bottom: 30px;
    
    }
    body, table, th, td, div { 
        font:normal normal 95%/1.0 arial, times new roman, verdana; 
    }
    body {
        counter-reset: pg 0;
    }
    table {
        cell-padding: 0;
        cell-spacing: 0;
    }
    #main {
        margin:auto;
        width:700px;
        background:#ffffff;
    }
    .headerSect {
        width:700px;
    }
    .logoDiv {
        height:95px;
        width:325px;
    }
    .cmpLogo {
        max-width:320px;
        height:auto;
    }
    .header {
        width:350px;
        border: 1px solid;
        padding: 4px;
    }
    .formTitle {
        float:left;
        font-weight: bold;
        font-size: 140%;
        padding-left:4px;
    }
    .pageNumSect {
        float:right;
        counter-increment: pg;
    }
    div.pageNumSect:before {
        content: "Page " counter(pg) " of " ;
    
    }
    .headerInfo {
        margin-top:24px;
        padding: 2px;
    }
    .hdrInfoLbl {
        font-weight: bold;
    }
    .hdrInfoData {
        font-weight: normal;
    }
    td {
        padding: 2px;
    }
    .addressSect {
        background-color: #000000;
        width:700px;
        margin-top:6px;
        margin-right:2px;
    }
    .addressSect th {
        text-align:center;
        font-weight: bold;
        background-color:#000000;
        color:#ffffff;
        padding: 2px;
    } 
    .addressSect td {
        background-color:#ffffff;
    } 
    .termsSect {
        width:700px;
        margin-top:6px;
        border: 1px solid;
    }
    .termsSect td {
        vertical-align:top;
    }
    .termsSect td:nth-child(1) {
        width: 17%;
        font-weight: bold;
    }
    .termsSect td:nth-child(2) {
        width: 33%;
    }
    .termsSect td:nth-child(3) {
        width: 15%;
        font-weight: bold;
    }
    .termsSect td:nth-child(4) {
        width: 35%;
    }
    table.lines {
        width:700px;
        table-layout:fixed;
        background-color: #ffffff;
        margin-top:6px;
        margin-right:2px;
        border-top: 1px solid;
        border-bottom: 1px solid;
        border-right: 1px solid;
    }
    table.lines td {
        background-color:#ffffff;
        vertical-align:top;
        padding: 2px;
        border-left: 1px solid black;
    }
    table.lines tr.lines_content_row td {
        text-align: right;
    }
    table.lines tr.lines_content_row td.col_desc {
        white-space:wrap;
        text-align: left;
    }
    table.lines tr.lines_content_row td.col_product {
        overflow:hidden;
        text-overflow:clip;
        white-space:nowrap;
        text-align: left;
    }
    table.lines tr.lines_content_row td.col_product_desc {
        white-space:wrap;
        text-align: left;
    }
    table.lines tr.lines_content_row td.col_empty {
        color: white;
    }
    table.lines tr.lines_content_row td.col_sm_indent {
        padding-left: 1em;
    }
    table.lines tr.lines_content_row td.col_uom {
        text-align: center;
    }
    table.lines th {
        background-color:#000000;
        color:#ffffff;
        padding: 3px;
        text-align:center;
        font-weight:bold;
    }
    table.footerSect {
        width:700px;
        margin-top:6px;
        margin-right:2px;
        border-top: 1px solid;
        border-bottom: 1px solid;
        border-right: 1px solid;
    }
    table.footerSect td {
        margin-top: 6px;
        border-left: 1px solid black;
    }
    table.footerSect td td {
        border: none;
    }
    //230
    .totalLabel {
        font-weight: bold;
        width: 80px;
    }
    .totalAmt {
        text-align:right;
        width: 150px;
    }
    .totalSect td {
        border: 0;
    }
</style>
</head>
<body>
<div id="main">
<apex:repeat value="{!pages}" var="page">
    <div class="headerSect" style="{!IF(page.pageNum>1,'page-break-before:always;','')}">
      <table cellspacing="0" cellpadding="0" border="0">
      <tr><td>
        <div class="logoDiv">
            <apex:image styleClass="cmpLogo" value="{!relatedTo.rstk__companylogo__c}" rendered="{!!ISBLANK(relatedTo.rstk__companylogo__c)}"/>
        </div>
      </td><td>
        <div class="header">
            <div class="formTitle">Return Material Authorization</div>
            <div class="pageNumSect">{!pages.size}</div>
            <apex:panelGrid styleClass="headerInfo" columnClasses="hdrInfoLbl,hdrInfoData" columns="2" width="100%">
                <apex:outputText value="RMA No"/>
                <apex:outputText value="{!relatedTo.rstk__order__c}"/>
                <apex:outputText value="{!h_f.rstk__orderdate__c.label}"/>
                <apex:outputText value="{0,date,short}">
                  <apex:param value="{!relatedTo.rstk__orderdate__c}"/>
                </apex:outputText>
                <apex:outputText value="Customer Name"/>
                <apex:outputText value="{!relatedTo.rstk__customername__c}"/>
                <apex:outputText value=""/>
                <apex:outputText value=""/>
            </apex:panelGrid>
        </div>
      </td></tr></table>
    </div>
    <table class="addressSect" cellspacing="1">
        <tr>
            <th>Sold To</th><th>Ship To</th>
        </tr>
        <tr width="100%">
            <td valign="top" width="50%">
            <apex:panelGrid columns="1" width="100%">
                <apex:outputText value="{!relatedTo.rstk__customername__c}"/>
                <apex:outputText value="{!relatedTo.rstk__address1__c}"/>
                <apex:outputText value="{!relatedTo.rstk__address2__c}" rendered="{!!ISBLANK(relatedTo.rstk__address2__c)}"/>
                <apex:outputText value="{!relatedTo.rstk__address3__c}" rendered="{!!ISBLANK(relatedTo.rstk__address3__c)}"/>
                <apex:outputText value="{0}, {1}  {2}">
                    <apex:param value="{!relatedTo.rstk__city__c}"/>
                    <apex:param value="{!relatedTo.rstk__state__c}"/>
                    <apex:param value="{!relatedTo.rstk__zip__c}"/>
                </apex:outputText>
                <apex:outputText value="{!relatedTo.rstk__country__c}" rendered="{!!ISBLANK(relatedTo.rstk__country__c)}"/>
                <apex:outputText value="Phone: {0}" rendered="{!!ISBLANK(relatedTo.rstk__phone__c)}">
                    <apex:param value="{!relatedTo.rstk__phone__c}"/>
                </apex:outputText>
                <apex:outputText value="Fax: {0}" rendered="{!!ISBLANK(relatedTo.rstk__fax__c)}">
                    <apex:param value="{!relatedTo.rstk__fax__c}"/>
                </apex:outputText>
                <apex:outputText value="Email: {0}" rendered="{!!ISBLANK(relatedTo.rstk__email__c)}">
                    <apex:param value="{!relatedTo.rstk__email__c}"/>
                </apex:outputText>
            </apex:panelGrid>
            </td>
            <td valign="top" width="50%">
            <apex:panelGrid columns="1" width="100%">
                <apex:outputText value="{!relatedTo.rstk__shiptoname__c}"/>
                <apex:outputText value="{!relatedTo.rstk__shiptoaddress1__c}"/>
                <apex:outputText value="{!relatedTo.rstk__shiptoaddress2__c}" rendered="{!!ISBLANK(relatedTo.rstk__shiptoaddress2__c)}"/>
                <apex:outputText value="{!relatedTo.rstk__shiptoaddress3__c}" rendered="{!!ISBLANK(relatedTo.rstk__shiptoaddress3__c)}"/>
                <apex:outputText value="{0}, {1}  {2}">
                    <apex:param value="{!relatedTo.rstk__shiptocity__c}"/>
                    <apex:param value="{!relatedTo.rstk__shiptostate__c}"/>
                    <apex:param value="{!relatedTo.rstk__shiptozip__c}"/>
                </apex:outputText>
                <apex:outputText value="{!relatedTo.rstk__shiptocountry__c}" rendered="{!!ISBLANK(relatedTo.rstk__shiptocountry__c)}"/>
                <apex:outputText value="Phone: {0}" rendered="{!!ISBLANK(relatedTo.rstk__shiptophone__c)}">
                    <apex:param value="{!relatedTo.rstk__shiptophone__c}"/>
                </apex:outputText>
                <apex:outputText value="Fax: {0}" rendered="{!!ISBLANK(relatedTo.rstk__shiptofax__c)}">
                    <apex:param value="{!relatedTo.rstk__shiptofax__c}"/>
                </apex:outputText>
                <apex:outputText value="Email: {0}" rendered="{!!ISBLANK(relatedTo.rstk__shiptoemail__c)}">
                    <apex:param value="{!relatedTo.rstk__shiptoemail__c}"/>
                </apex:outputText>
            </apex:panelGrid>
        </td>
        </tr>
    </table>
    <!-- Line Table -->
    <table border="0" cellspacing="0" cellpadding="0" class="lines">
        <tr class="lines_header_row">
            <th width="8%" >Line</th>
            <th width="30%">Product</th>
            <th width="40%">Product Description</th>
            <th width="10%">UOM</th>
            <th width="10%">Order Qty</th>
        </tr>
        <apex:repeat var="l" value="{!page.lines}">
        <apex:variable var="isSpanRow" value="{!l.rstk__linetype__c='Desc'}"/>
        <tr class="lines_content_row">
         <apex:outputPanel layout="none" rendered="{!isSpanRow}">
            <!-- Line Number Column -->
            <td class="col_lineno"></td>
            <!-- Description Column -->
            <td colspan="4" class="col_desc" >{!IF(l.rstk__searchindex__c!=null, l.rstk__searchindex__c, l.rstk__order__c)}</td>
         </apex:outputPanel>
         <apex:outputPanel layout="none" rendered="{!!isSpanRow}">
            <!-- Line Number Column -->
            <td class="col_lineno">
                <apex:outputText value="{0,number,###0}"><apex:param value="{!l.rstk__line__c}"/></apex:outputText>
            </td>
            <!-- Product Column -->
            <apex:variable var="isProductIndent" value="{! LEFT(l.rstk__product__c,2)='**' }"/>
            <apex:variable var="productClass" value="{! 'col_product' + IF(l.rstk__product__c=' ',' col_empty','') + IF(isProductIndent,' col_sm_indent','')}"/>
            <apex:variable var="productDisplayValue" value="{! IF(isProductIndent, RIGHT(l.rstk__product__c,LEN(l.rstk__product__c)-2), IF(l.rstk__product__c=' ','X',l.rstk__product__c) )}"/>
            <td class="{!productClass}">{!productDisplayValue}</td>
            <!-- Product Description Column -->
            <apex:variable var="isProductDescIndent" value="{! LEFT(l.rstk__producstdescr__c,2)='**' }"/>
            <apex:variable var="productDescClass" value="{! 'col_product_desc' + IF( l.rstk__producstdescr__c=' ' ,' col_empty','') + IF(isProductDescIndent, ' col_sm_indent', '')  }"/>
            <apex:variable var="productDescDisplayValue" value="{! IF(isProductDescIndent, RIGHT(l.rstk__producstdescr__c,LEN(l.rstk__producstdescr__c)-2), IF(l.rstk__producstdescr__c=' ','X',l.rstk__producstdescr__c))}"/>
            <td class="{!productDescClass}">{!productDescDisplayValue}</td>
            <!-- Unit Of Measure Column -->
            <td class="col_uom">{!l.rstk__uom__c}</td>
            <!-- Quantity Column -->
            <td class="col_qty">
                <apex:outputText value="{0,Number,###,###,###,##0.00}">
                    <apex:param value="{!l.rstk__qtyorder__c}"/>
                </apex:outputText>
            </td>
         </apex:outputPanel>
        </tr>
      </apex:repeat> 
    </table>
</apex:repeat>
</div>
</body>
</apex:page>